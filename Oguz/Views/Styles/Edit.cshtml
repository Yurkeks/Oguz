@model Oguz.Models.Style

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div class="CRUD-container">
    <div>
        <h1>Изменение стиля</h1>
        <div><a class="btn btn-backtolist mt-4 mb-1" role="button" asp-action="Index">Назад к списку</a></div>
        <br />
    </div>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="row pt-30px">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-4">Категория: </label>
                    <select name="@Model.Category" asp-for="Category" class="form-control col-7">
                        <option value="@Category.Curtains">Шторы</option>
                        <option value="@Category.Shades">Гардины</option>
                        <option value="@Category.Pillows">Подушки</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Название: </label>
                    <input asp-for="Name" class="form-control col-7" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Описание: </label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "col-7 form-control" })
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Новое фото: </label>
                    <input type="file" class="col-7" name="image" style="margin-left:-15px" />
                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="custom-control custom-checkbox col">
                        <input type="checkbox" asp-for="Active" class="custom-control-input" id="defaultUnchecked">
                        <label class="custom-control-label" for="defaultUnchecked">Показывать на сайте</label>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <label class="control-label col-4"></label>
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>

            </div>
            <div class="col-6">
                <img src='~/Images/Styles/@Model.ImageName' />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageName" />
            </div>
        </div>
    </form>
</div>

