<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oguz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Animation.css" />
</head>
<body>
    <div id="preloader">
        <div class="cssload-wrench"></div>
    </div>
    <header>
        <div class="bigDevice-header ">
            <div class="container d-flex justify-content-between align-items-center">
                <a class="nav-brand" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                <div class="nav-menu">
                    <ul class="d-flex">
                        <li class="nav-item">
                            <a class=" text-dark" asp-area="" asp-action="Orders">Заказы</a>
                        </li>
                        <li class="nav-item">
                            <a class=" text-dark" asp-area="" asp-action="Orders">Клиенты</a>
                        </li>
                        <li class="dropdown">
                            <a class=" text-dark" href="#">
                                 Данные
                                <span class="caret-down"><i class="fa fa-caret-down" aria-hidden="true"></i></span>
                            </a>
                            <div class="dropdown-menu" style="display: none">
                                <a class="dropdown-item" asp-controller="Curtains" asp-action="Index">Шторы</a>
                                <a class="dropdown-item" asp-controller="Pillows" asp-action="Index">Подушки</a>
                                @*<a class="dropdown-item" asp-controller="Accessories" asp-action="Index">Акссесуары</a>*@
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Brands" asp-action="Index">Бренды</a>

                            </div>
                        </li>
                        <li class="dropdown">
                            <a class=" text-dark" href="#">
                                 Настройки
                                <span class="caret-down"><i class="fa fa-caret-down" aria-hidden="true"></i></span>
                            </a>
                            <div class="dropdown-menu" style="display: none">
                                <a class="dropdown-item" asp-controller="SMTPClients">Почта</a>
                                <a class="dropdown-item" asp-controller="Roles">Роли</a>
                                <a class="dropdown-item" asp-controller="Discounts" asp-action="Index">Скидки</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="">
                    Посещений: 23
                </div>
            </div>
        </div>
        <div class="smallDevice-header">
            <nav class="navbar navbar-expand-sm navbar-toggleable-lg navbar-light mb-3 border-bottom box-shadow">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                    <div class="basket">
                        Посещений: 23
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav d-flex">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Образцы</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                    Данные
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Образцы</a>
                                    <a class="dropdown-item" href="#">Шторы</a>
                                    <a class="dropdown-item" href="#">Гардины</a>
                                    <a class="dropdown-item" href="#">Подушки</a>
                                    <a class="dropdown-item" href="#">Акссесуары</a>
                                </div>
                            </li>
                            <li class="dropdown">
                                <a class=" text-dark" href="#">
                                    Настройки
                                    <span class="caret-down"><i class="fa fa-caret-down" aria-hidden="true"></i></span>
                                </a>
                                <div class="dropdown-menu" style="display: none">
                                    <a class="dropdown-item" href="#">Почта</a>
                                    <a class="dropdown-item" href="#">Роли</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="subscribe">
            <div class="container text-center">
                <a asp-controller="Home" asp-action="Index"><h3>Вернуться на сайт</h3></a>
            </div>
        </div>
        <div class="container pt-4">
            <div class="row pb-4 d-flex justify-content-center">

                <div class="col">
                    <h3 class="pb-3 pt-2 pl-40px">Logo</h3>
                    &copy; 2020 - Oguz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col">

                    <h3 class="pb-3 pt-2">Магазин</h3>
                    <ul>
                        <li><a href="">Шторы</a></li>
                        <li><a href="">Гардины</a></li>
                        <li><a href="">Подушки</a></li>
                        <li><a href="">Акссесуары</a></li>
                    </ul>
                </div>
                <div class="col">
                    <h3 class="pb-3 pt-2 ">Бренды</h3>
                    <ul>
                        <li><a href="">Sarlas in Style</a></li>
                        <li><a href="">Casari design</a></li>
                    </ul>
                </div>
                <div class="col">

                    <h3 class="pb-3 pt-2">Контакты</h3>
                    <ul>
                        <li><a href="">email</a></li>
                        <li><a href="">Телефон</a></li>
                        <li><a href="">Адрес</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/preloader.js"></script>
    <script src="~/js/dropdown-menu.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
