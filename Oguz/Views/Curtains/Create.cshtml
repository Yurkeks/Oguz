@model Oguz.Models.Curtains

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="CRUD-container">
    <h1>Добавление ткани</h1>
    <div><a class="btn btn-backtolist btn-light mt-4 mb-1" role="button" asp-action="Index">Назад к списку</a></div>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-4">Категория: </label>
                    <select asp-for="Category" class="form-control col-8">
                        <option value="@Category.Curtains">Шторы</option>
                        <option value="@Category.Shades">Гардины</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Бренд: </label>
                    @Html.DropDownListFor(model => model.BrandId, ViewBag.Brands as SelectList, new { @class = "form-control col-8" })
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Название: </label>
                    <input asp-for="Name" class="form-control col-8" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Описание: </label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "col-8 form-control" })
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Стоимость: </label>
                    <input type="number" asp-for="Price" class="form-control col-8" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Фото: </label>
                    <input type="file" class="col-8 pl-0" name="image" />
                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="custom-control custom-checkbox col">
                        <input type="checkbox" asp-for="Active" class="custom-control-input" id="defaultUnchecked">
                        <label class="custom-control-label" for="defaultUnchecked">Показывать на сайте</label>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <label class="control-label col-4"></label>
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
