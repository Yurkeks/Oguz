@model List<Style>


@{
    ViewData["Title"] = "Style";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<input type="hidden" id="prgoressBarStep" name="step" value="style">
<div id="progressBar"></div>*@

<div class="root">
    <div class="container-pb">
        <ul class="progressbar">
            <li>Step 1</li>
            <li>Step 2</li>
            <li>Step 3</li>
            <li>Step 4</li>
            <li>Step 5</li>
        </ul>
    </div>
</div>


<div class="container">
    <div class="product_description">
        <h2 class="product_heading">Вы в конструкторе заказа</h2>
        <p>
            Выберите стиль пошива, чтобы продолжить
        </p>
    </div>

    <div class="styles row">
        @foreach (var style in Model)
        {
            <div class="col-lg-6">
                <div class="product-wrapper">
                    <div class="product-image">
                        <img src="~/Images/Styles/@style.ImageName" alt="Style" />
                    </div>
                    <div class="product-name">
                        <h3>@style.Name</h3>
                    </div>
                    <div class="product-description">
                        <p>@style.Description</p>
                    </div>
                    <a class="selectButton" asp-action="Fabric" asp-route-styleId="@style.Id">Select & Continue</a>
                </div>
            </div>
        }
    </div>
</div>

    

